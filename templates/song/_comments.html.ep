<section class="comments col-12">

    % if ( scalar @$forest ) {
        % foreach my $tree ( @$forest ) {
            %== render_comment_tree($tree);
        % }
    % }

    % if ( stash 'auth_user') {
        <p><a href="<%= url_for 'new_song_comment', song_id => $song->id %>">New comment</a></p>
    % }
    % else {
        <p><a href="<%= url_for 'login' %>">Log in</a> to add a comment</p>
    % }
</section>
