<p class="navigation">
    % if (my $song = $navigation->{newer}) {
        <p class="next">&raquo; <a href="<%= url_for 'view_song', song_id => $song->id %>"><%= $song->title %></a></p>
    % }
    % if (my $song = $navigation->{older}) {
        <p class="prev">&laquo; <a href="<%= url_for 'view_song', song_id => $song->id %>"><%= $song->title %></a></p>
    % }
</p>
