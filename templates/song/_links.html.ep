% if ( scalar keys %$links ) {
    <div class="links">
        <h4>Links</h4>
        <p>
            <ul>
                % while ( my $link = $list_links->next ) {
                    <li>
                        <a class="<%= $link->class %>" href="<%= $link->url %>"><%= $link->description %></a>
                    </li>
                % }
            </ul>
        </p>
    </div>
% }
