% if ( scalar keys %$links ) {
    <div class="links">
        <h4>Links</h4>
        <p>
            <ul>
                % foreach my $k (sort { $links->{$a}->priority <=> $links->{$b}->priority } keys %$links) {
                    <li>
                        <a href="<%= $links->{$k}->url %>"><%= $k %></a>
                    </li>
                % }
            </ul>
        </p>
    </div>
% }
