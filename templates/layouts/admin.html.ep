<!DOCTYPE html>
<html lang="en">
    %= include 'layouts/_headers'
<body>

<div class="container">
    <header>
        % if (my $msg = flash 'msg') {
            <div class="alert alert-success row flash-msg" role="alert" id="flash-msg">
                <%= $msg %>
            </div>
        % }

        <div class="row">
            <div class="col-12">
                <h1>Songs I Will Never Tire of...</h1>
                %= include "user/_loginout"
            </div>
        </div>
    </header>

    <main>
        <div class="row">
            <div class="col-12">
                <%= content %>
            </div>
        </div>
    </main>

    <footer>
        <div class="row">
            <div class="col-12">
                Page footer here.
            </div>
        </div>
    </footer>
</div>

<script type="text/javascript">
    $(function() {
        markdownPreview("#new-song-summary-markdown", "#markdown-preview-summary");
        markdownPreview("#new-song-full-markdown", "#markdown-preview-full");
    });
</script>


</body>
</html>
