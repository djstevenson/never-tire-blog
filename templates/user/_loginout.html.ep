<p class="login-status">
% if (my $auth_user = stash 'auth_user') {
    Logged-in as <span class="user-name"><%= $auth_user->name %></span>
    % if ($auth_user->admin) {
        (<a class="admin-home-link" href="<%= url_for('admin_home') %>">ADMIN</a>)
    % }
    <a class="logout-link" href="<%= url_for('logout') %>">Logout</a>
% }
% else {
    <a class="login-link" href="<%= url_for('login') %>">Login</a> to add comments
% }
</p>
